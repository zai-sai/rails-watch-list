<div class="text-center mb-3">
  <h2>movie lists</h2>
  <p class="lead mb-4">forget genre, let's get funky by vibe</p>
  <%= link_to 'make a new list', new_list_path, class: "nav-item btn btn-primary mb-2" %>
  <p>or explore existing vibes:</p>
</div>

<div class="row">
  <% if notice %>
    <div class="d-flex justify-content-center">
      <p class="border border-3 border-primary bg-light text-center text-dark mb-3 p-2"><%= notice %></p>
    </div>
  <% end %>
  <% @lists.each do |list| %>
  <div class="col-12 col-md-4">
    <div class="card text-bg-dark m-2">
      <%# <img src="..." class="card-img" alt="..."> %>
      <div class="card-body text-center align-center"> <%# replace card-body with card-img-overlay %>
        <h5 class="card-title"><%= link_to list.name, list_path(list), class: 'link-underline link-underline-opacity-0'%></h5>
      </div>
    </div>
  </div>
  <% end %>
</div>
